<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tripInfoView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.trip.tripster.activity.TripInfo"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appBar"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:background="@color/colorPrimary">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tripInfoToolbar"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:context="com.example.trip.tripster.activity.TripInfo">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/infoTitle"
                android:paddingLeft="10dp"
                android:textColor="@android:color/white" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/calculatePayments"
                android:layout_alignParentRight="true"
                android:text="Calculate"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:onClick="openCalculatePayments" />

        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/tripInformation"
        android:layout_weight="1"
        android:animateLayoutChanges="true">


        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fab"
            android:onClick="addTripInfo"
            android:layout_gravity="bottom|end"
            android:layout_margin="20dp"
            android:tint="@android:color/white"
            app:fabSize="normal"
            app:elevation="6dp"
            android:backgroundTint="@color/colorPrimary"
            android:src="@android:drawable/ic_input_add"
            android:clickable="true"/>

    </FrameLayout>
    
    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tabs"
        android:background="@color/mdtp_neutral_pressed"
        app:menu="@menu/tabs"
        app:elevation="8dp"
        android:layout_gravity="bottom"
        android:elevation="10dp" />


</LinearLayout>
