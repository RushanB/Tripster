            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDU-pbyDpUVyRSLuLIDEBulQXnUIXK1eew" />

        <activity android:name=".activity.Splash">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.AddPlace" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.AddTrip" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.AddPayment" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.TripInfo" >
